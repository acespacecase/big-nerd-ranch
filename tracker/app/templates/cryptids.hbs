<div class="row">
  {{#each model as |cryptid|}}
    <div class="col-xs-12 col-sm-3 text-center">
      <div class="media well">
        {{#link-to 'cryptid' cryptid.id}}
          <img class="media-object thumbnail" src="{{if cryptid.profileImg cryptid.profileImg 'assets/images/cryptids/blank_th.png'}}"
               alt="{{cryptid.name}}" width="100%" height="100%">
        {{/link-to}}
        <div class="caption">
          <h3>{{cryptid.name}}</h3>
        </div><!-- caption-->
      </div><!--media well-->
    </div><!--col-->
  {{else}}
    <div class="jumbotron">
      <h1>No Creatures</h1>
    </div><!--jumbotron-->
  {{/each}}
</div><!--row-->
